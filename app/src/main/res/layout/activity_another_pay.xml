<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".activitys.AnotherPayActivity">
    <com.mfc.kdyxworker.widget.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showBottomLine="false"
        app:leftType="imageButton"
        app:leftImageResource="@mipmap/btn_fanhui"
        app:centerType="textView"
        app:centerText="代付">
    </com.mfc.kdyxworker.widget.TitleBar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--基本信息-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/color_white"
                android:paddingLeft="@dimen/left_padding"
                android:paddingRight="@dimen/right_padding"
                android:layout_marginBottom="@dimen/dp_1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/font_16sp"
                    android:text="基本信息"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:paddingLeft="@dimen/left_padding"
                android:paddingRight="@dimen/right_padding"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <!--订单号-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_15sp"
                        android:text="订单号:"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_15sp"
                        android:text="订单号"/>
                </RelativeLayout>
                <include layout="@layout/layout_grey_line_1dp"/>
                <!--商户名-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_15sp"
                        android:text="商户名"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_15sp"
                        android:text="订单号"/>
                </RelativeLayout>
            </LinearLayout>
            <!--金额信息-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/color_white"
                android:paddingLeft="@dimen/left_padding"
                android:paddingRight="@dimen/right_padding"
                android:layout_marginBottom="@dimen/dp_1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/font_16sp"
                    android:text="金额信息"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/left_padding"
                android:paddingRight="@dimen/right_padding"
                android:paddingTop="20dp"
                android:paddingBottom="30dp"
                android:background="@color/color_white">
                <!--下单金额-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_lignt"
                        android:textSize="@dimen/sp_14"
                        android:text="下单金额"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_lignt"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp_14"
                        android:text="@string/money"/>
                </RelativeLayout>
                <!--出库金额-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_lignt"
                        android:textSize="@dimen/sp_14"
                        android:text="出库金额"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_lignt"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp_14"
                        android:text="@string/money"/>
                </RelativeLayout>
                <!--异常金额-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_lignt"
                        android:textSize="@dimen/sp_14"
                        android:text="异常金额"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_lignt"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp_14"
                        android:text="@string/money"/>
                </RelativeLayout>
                <!--实退金额-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_lignt"
                        android:textSize="@dimen/sp_14"
                        android:text="实退金额"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_lignt"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp_14"
                        android:text="@string/money"/>
                </RelativeLayout>
                <!--运费-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_lignt"
                        android:textSize="@dimen/sp_14"
                        android:text="运费"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_lignt"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp_14"
                        android:text="@string/money"/>
                </RelativeLayout>
                <include layout="@layout/layout_grey_line_1dp"/>
                <!--合计金额-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_lignt"
                        android:textSize="@dimen/sp_14"
                        android:text="合计金额"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_green"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp_14"
                        android:text="@string/money"/>
                </RelativeLayout>
                <!--已支付金额-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_lignt"
                        android:textSize="@dimen/sp_14"
                        android:text="已支付金额"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_green"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp_14"
                        android:text="@string/money"/>
                </RelativeLayout>
                <!--已退款金额-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_lignt"
                        android:textSize="@dimen/sp_14"
                        android:text="已退款金额 (退入余额账户)"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_green"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp_14"
                        android:text="@string/money"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="12dp"
            android:paddingLeft="@dimen/left_padding"
            android:textColor="@color/color_black_lignt"
            android:textSize="@dimen/font_14sp"
            android:text="温馨提示: 请确认现金收款后进行代付"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="@dimen/font_18sp"
            android:background="@drawable/selector_btn_bgreen_noborder_n"
            android:textColor="@color/color_white"
            android:text="确认代付"/>
    </LinearLayout>
</LinearLayout>