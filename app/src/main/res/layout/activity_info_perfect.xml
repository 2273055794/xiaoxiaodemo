<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".activitys.InfoPerfectActivity">
    <com.mfc.kdyxworker.widget.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showBottomLine="false"
        app:leftType="imageButton"
        app:leftImageResource="@mipmap/btn_fanhui"
        app:centerType="textView"
        app:centerText="完善信息(1/2)">
    </com.mfc.kdyxworker.widget.TitleBar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/left_padding"
        android:paddingRight="@dimen/right_padding">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="姓名        "
                android:inputType="phone"
                android:textSize="@dimen/font_15sp"
                android:textColor="@color/color_black"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_15sp"
                android:background="@color/color_white"
                android:hint="请填写真实姓名"
                android:textColor="@color/color_black_lignt"
                android:textColorHint="@color/color_black_lignt"/>
        </LinearLayout>
        <include layout="@layout/layout_grey_line_1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:inputType="phone"
                android:textSize="@dimen/font_15sp"
                android:textColor="@color/color_black"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="请填写身份证号"
                android:background="@color/color_white"
                android:textSize="@dimen/font_15sp"
                android:textColor="@color/color_black_lignt"
                android:textColorHint="@color/color_black_lignt"/>
        </LinearLayout>
        <include layout="@layout/layout_grey_line_1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="银行卡号"
                android:inputType="phone"
                android:textSize="@dimen/font_15sp"
                android:textColor="@color/color_black"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="请填写本人银行卡号"
                android:background="@color/color_white"
                android:textSize="@dimen/font_15sp"
                android:textColor="@color/color_black_lignt"
                android:textColorHint="@color/color_black_lignt"/>
        </LinearLayout>
        <include layout="@layout/layout_grey_line_1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="开户行"
                android:inputType="phone"
                android:textSize="@dimen/font_15sp"
                android:textColor="@color/color_black"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="请填写开户行名称"
                android:background="@color/color_white"
                android:textSize="@dimen/font_15sp"
                android:textColor="@color/color_black_lignt"
                android:textColorHint="@color/color_black_lignt"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_btn_bgreen_noborder_r"
        android:layout_marginLeft="@dimen/left_padding"
        android:layout_marginRight="@dimen/right_padding"
        android:layout_marginTop="45dp"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_18sp"
        android:text="下一步"/>
</LinearLayout>