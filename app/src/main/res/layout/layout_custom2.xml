<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_custom2_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dialogcon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="25dp"
            android:paddingBottom="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_black_lignt"
                android:textSize="@dimen/font_15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/color_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/negativeButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_bwhite_noborder_r3db"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/color_black_lignt"
                style="?android:attr/borderlessButtonStyle"
                android:text="取消" />

            <View
                android:id="@+id/div_neutral"
                android:layout_width="1dip"
                android:layout_height="50dp"
                android:background="@color/color_white" />

            <Button
                android:id="@+id/positiveButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_bgreen_noborder_r3db"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_18sp"
                style="?android:attr/borderlessButtonStyle"
                android:text="确定" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>